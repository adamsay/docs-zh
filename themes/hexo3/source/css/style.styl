@import "nib"
@import "_variables"

global-reset()

@import "_util/grid"
@import "_util/mixin"

body
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(12)

@import "_partial/header"
@import "_partial/page"
@import "_partial/sidebar"
@import "_partial/news"
@import "_partial/api"
@import "_partial/index"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/discuss-sidebar.styl"

.classitem-tag
  background-color: #e4edf4
  padding: .4em .5em
  text-align: center
  line-height: 1
  color: #3e6d8e
  margin: 2px 2px 2px 0
  white-space: nowrap
  border-radius: 0
  display: inline-block
  border: 1px solid #e4edf4

.footer-wrap
  padding-top: 30px
  height: auto

.footer-logo
  float:left
  width:10%
  padding-left: 0
  padding-right: 5%

.sitemap-wrap
  float:left
  width:60%
  padding-left: 2%

.sitemap-col
  float:left
  width:40%
  padding-left: 5%
  a
    text-decoration: none
    color: #666

